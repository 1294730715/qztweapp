/* pages/newjobs/newjobs.wxss */
@import "../../template/jobCard.wxss";

.job-logo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.logo-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 20rpx;
  align-items: cnter;
}

.welcome {
  font-size: 38rpx;
  font-weight: bold;
  color: rgb(49, 53, 65);
  padding-left: 20rpx;
}

.welcome-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.welcome-container .hint {
  font-size: 25rpx;
  color: lightgray;
  padding-left: 20rpx;
  padding-top: 8rpx;
}

.form-container {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  border: 1rpx solid #e0e0e0;
}

.form-container .cell {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e0e0e0;
  vertical-align: middle;
  padding-bottom: 10rpx;
}

.form-container .cell .multiple {
  width: 65%; 
  display:flex; 
  flex-direction: row;
}

.label-font {
  font-size: 30rpx;
  color: rgb(19, 121, 189);
  width: 25%;
}

.input-font {
  font-size: 30rpx;
  color: rgb(44, 47, 58);
}

.input-placeholder {
  font-size: 30rpx;
  color: lightgray;
}

.form-container .cell:last-child {
  border-bottom: 0rpx;
}

.btn-area {
  margin: 50rpx;
}
