.card {
  border: 1rpx solid #e0e0e0;
  border-radius: 5rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin: 10rpx;
  opacity: 0.9;
}

.card .card-job-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.card .card-job-title .left {
  width: 50%;
}

.card .card-job-title .right {
  width: 50%;
}

.card .card-job-title .left .name {
  font-size: 32rpx;
  padding-left: 10rpx;
}

.card .card-job-title .right .salary {
  color: green;
  font-size: 24rpx;
  padding-left: 50rpx;
}

.card .card-job-type {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 8rpx;
}

.card .card-job-type .job-name {
  color: lightgray;
  font-size: 24rpx;
  padding-left: 10rpx;
}

.card .card-job-desc {
  margin-top: 8rpx;
}

.card .card-job-desc .desc {
  color: gray;
  font-size: 24rpx;
  padding-left: 10rpx;
}

.card .card-job-footer {
  margin-top: 8rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
  align-items: center;
}

.card .card-job-footer .left {
  display: flex;
  flex-direction: column;
  width: 60%;
}

.card .card-job-footer .left .tel {
  color: darkcyan;
  font-size: 24rpx;
  padding-left: 10rpx;
}

.card .card-job-footer .pub {
  color: #e0e0e0;
  font-size: 24rpx;
  padding-left: 10rpx;
  padding-top: 5rpx;
}